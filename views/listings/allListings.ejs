<% layout("../layouts/boilerplate.ejs") %>
<body>
  <h1>Listings</h1>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1">
    <% for (const list of listings){ %>
    <a class="card-ancor text-decocation" href="/listings/<%= list._id %>">
      <div class="card col">
        <img
          src="<%=list.image.url%>"
          class="card-img-top"
          alt="<%=list.image.filename%>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= list.title %></h5>
          <p class="card-price">
            &#8377; <%= list.price.toLocaleString('en-IN') %>
          </p>
          <p class="card-text"><%=list.country%></p>
        </div>
      </div>
    </a>

    <% } %>
  </div>

  <form class="btn-undo" action="/listings/undo" method="post">
    <button class="btn btn-warning">Undo</button>
  </form>
</body>
